<GridPane alignment="CENTER" prefHeight="500" prefWidth="700" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.kyllian.netflixstatistix.controllers.ProfileController">

    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <ImageView fx:id="logo" fitHeight="100" fitWidth="100" GridPane.halignment="LEFT" GridPane.valignment="TOP" preserveRatio="true" translateX="-110" translateY="-200"/>

        <Label fx:id="profileText" text="Who's Watching" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

            <ImageView fx:id="profilePicture1" fitHeight="100" fitWidth="100" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <ImageView fx:id="profilePicture2" fitHeight="100" fitWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <ImageView fx:id="profilePicture3" fitHeight="100" fitWidth="100" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <ImageView fx:id="profilePicture4" fitHeight="100" fitWidth="100" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
            <ImageView fx:id="profilePicture5" fitHeight="100" fitWidth="100" GridPane.columnIndex="4" GridPane.rowIndex="2"/>

        <Button fx:id="manageButton" text="Manage profiles" GridPane.columnSpan="3" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="CENTER" maxWidth="300">
        </Button>
</GridPane>
