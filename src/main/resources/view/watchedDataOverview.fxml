<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet type="text/css" href="resources/css/profile.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" prefHeight="500" prefWidth="700" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="me.kyllian.netflixstatistix.controllers.WatchedDataOverviewController">

    <padding>
        <Insets bottom="10" left="25" right="25" top="25"/>
    </padding>

    <ImageView fx:id="logo" fitHeight="100" fitWidth="100" preserveRatio="true" translateX="-110" translateY="-110"
               GridPane.halignment="LEFT" GridPane.valignment="TOP"/>
    <Button onMouseClicked="#add" fx:id="add" mnemonicParsing="false" text="Add program" GridPane.rowIndex="3"/>
    <Button onMouseClicked="#remove" fx:id="remove" mnemonicParsing="false" text="Remove program"
            GridPane.columnIndex="3" GridPane.rowIndex="3"/>
    <Label text="Input percentage"/>
    <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="102.0" text="Program ID" GridPane.rowIndex="1"/>
    <Button mnemonicParsing="false" onMouseClicked="#back" text="Return" GridPane.columnIndex="4"
            GridPane.rowIndex="3"/>
    <TextField fx:id="percentage" prefHeight="26.0" prefWidth="91.0" GridPane.columnIndex="3"/>
    <TextField fx:id="programid" prefHeight="26.0" prefWidth="148.0" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
</GridPane>
