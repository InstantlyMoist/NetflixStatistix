<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="resources/css/registration.css"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="me.kyllian.netflixstatistix.controllers.RegistrationController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" styleClass="root"
          prefHeight="500"
          prefWidth="700"
>

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <ImageView fx:id="logo" fitHeight="100" fitWidth="100" GridPane.halignment="LEFT" GridPane.valignment="TOP"
               preserveRatio="true"></ImageView>

    <VBox GridPane.columnSpan="2">
        <TextField fx:id="nameField" prefHeight="40" promptText="First and last name"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="birthField" prefHeight="40" promptText="Birthdate (DD-MM-YYYY)"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="emailField" prefHeight="40" promptText="Email"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <PasswordField fx:id="passwordField" prefHeight="40" promptText="Password"
                   GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <PasswordField fx:id="repeatPasswordField" prefHeight="40" promptText="Repeat password"
                   GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="streetField" prefHeight="40" promptText="Street name"
                   GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="numberField" prefHeight="40" promptText="Number"
                   GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="postalcodeField" prefHeight="40" promptText="Postal code"
                   GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="residenceField" prefHeight="40" promptText="Residence"
                   GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    </VBox>
    <Button fx:id="backButton" text="Return" onMouseClicked="#back" GridPane.columnIndex="0" GridPane.rowIndex="10"
            prefWidth="170" prefHeight="50">
        <GridPane.margin>
            <Insets top="10"/>
        </GridPane.margin>
    </Button>
    <Button fx:id="submitButton" text="Create account"
            prefWidth="170" prefHeight="50"
            GridPane.columnIndex="1" GridPane.rowIndex="10"
            GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets top="10"/>
        </GridPane.margin>
    </Button>


</GridPane>
